<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F3E5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Daily Habit Tracker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"/>

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_month"
            android:contentDescription="Calendar"
            android:tint="#7B1FA2"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Today's Habit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7B1FA2"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etHabitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter habit (e.g., Exercise, Reading)"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#BA68C8"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAddHabit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Habit"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#9C27B0"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnViewStats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Stats"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#673AB7"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Today's Progress Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E1BEE7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Progress"
                    android:textSize="14sp"
                    android:textColor="#6A1B9A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 habits completed"
                    android:textSize="12sp"
                    android:textColor="#7B1FA2"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvProgressNumber"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#6A1B9A"
                android:gravity="center"
                android:background="@drawable/circle_bg"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today's Habits"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"/>

        <TextView
            android:id="@+id/tvHabitCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 habits"
            android:textSize="14sp"
            android:textColor="#9C27B0"
            android:background="@drawable/circle_bg"
            android:padding="8dp"
            android:minWidth="60dp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoHabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No habits tracked today.\nStart adding your daily habits!"
        android:textSize="14sp"
        android:textColor="#AB47BC"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHabits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>

</LinearLayout>